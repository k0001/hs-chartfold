tested-with: GHC ==9.4.3

common basic
  default-language: GHC2021
  default-extensions:
    DerivingStrategies
    DuplicateRecordFields
    LambdaCase
    NoFieldSelectors
    OverloadedRecordDot
    PatternSynonyms
    QuantifiedConstraints
  ghc-options: -O2 -Wall
  build-depends:
    base ==4.*,
    base-prelude,
    constraints,
    containers,
    chartfold,
    Chart,
    data-default-class,
    lens,
    parallel,
    text,
    time,
    vector-space,
  mixins:
    base hiding (Prelude),
    base-prelude (BasePrelude as Prelude)

library
  import: basic
  hs-source-dirs: lib
  exposed-modules: Chartfold.Backend.Chart
  other-modules: Chartfold.Backend.Chart.Orphans

